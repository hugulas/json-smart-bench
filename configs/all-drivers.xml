<?xml version="1.0" encoding="UTF-8"?>
<testSuite name="XPathpex" xmlns="http://www.sun.com/japex/testSuite"
	xmlns:xi="http://www.w3.org/2001/XInclude">

	<description>
		<div xmlns="">
			<p>Micro-benchmark for low-level databinded JSON parsers</p>
		</div>
	</description>

	<param name="japex.classPath" value="japlex/*.jar" />

	<!-- Very long run (3+ hours) -->
	<!-- <param name="japex.warmupTime" value="7" /> -->
	<!-- <param name="japex.runTime" value="25" /> -->
